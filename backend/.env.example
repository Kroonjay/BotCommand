# ===========================================
# OSRS Backend Environment Configuration
# ===========================================
# Copy this file to .env and update values as needed

# ----- Database (PostgreSQL) -----
# For local development:
POSTGRES_PRISMA_URL=postgresql://osrs:osrs_dev_password@localhost:5432/osrs_backend
# Docker Compose uses these to create the database:
POSTGRES_USER=osrs
POSTGRES_PASSWORD=osrs_dev_password
POSTGRES_DB=osrs_backend
POSTGRES_PORT=5432

# ----- Redis -----
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# ----- HTTP Server -----
HTTP_HOST=0.0.0.0
HTTP_PORT=8080

# ----- TCP Server (ML inference) -----
TCP_HOST=127.0.0.1
TCP_PORT=9999

# ----- ML Settings -----
ML_DEVICE=cpu
ML_PROCESSOR_POOL_SIZE=1
ML_PROCESSOR_TYPE=thread

# Models directory
# - For local dev: ../pvp-ml/models
# - For Docker: /app/models (mounted via docker-compose)
MODELS_DIR=../pvp-ml/models

# ----- Wiki API (for price fetching) -----
WIKI_API_BASE_URL=https://prices.runescape.wiki/api/v1/osrs
WIKI_API_USER_AGENT=osrs-backend/1.0

# ----- Logging -----
LOG_LEVEL=INFO
